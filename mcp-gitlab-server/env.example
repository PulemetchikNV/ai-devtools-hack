# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/mcp_gitlab?schema=public"

# Security
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY="your-32-byte-hex-encryption-key-here"

# API Authentication (for REST API access from Telegram bot)
# Generate with: openssl rand -hex 24
API_KEY="your-api-key-here"

# Optional: Default GitLab credentials for testing
# If provided, MCP tools can be called without passing credentials
DEFAULT_GITLAB_URL="http://localhost:80"
DEFAULT_GITLAB_TOKEN="your-gitlab-personal-access-token"

